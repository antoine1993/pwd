{% extends 'base1.html.twig' %}

{% block body %}
    <!-- ab -->
    <section  class="banner-bottom-w3layouts py-lg-5 py-md-5 py-3" id="feature">
        <div class="container">
            <div class="inner-sec-w3ls-agileits py-lg-5 py-3">
                <h4 class="sub-tittle text-uppercase text-center"></h4>

                {% if fiche==[] %}
                <p> Il n'y a pas de jeu.</p>
                {% else %}



                <h3 class="tittle text-center">{{ fiche.title }}</h3>



                <div class="about-info mt-lg-5 mt-md-4 mt-4 text-center">
                    <img src="../images/{{ fiche.image}}" class="img-fluid" alt="" />
                    <p class="my-lg-5 my-3"> Editeur : {{ fiche.editor }}</p>
                    <p class="my-lg-5 my-3">Genre : {{ fiche.genre }}</p>

                    <p class="my-lg-5 my-3">Plateforme : {{ fiche.platform }}</p>

                    <p class="my-lg-5 my-3">Resumé : {{ fiche.resume }}</p>

                    <h3 class="my-lg-5 my-3"> Commentaire:</h3>

                    {% for comments in comment %}

                        <p class="my-lg-5 my-3"> {{ comments.user }} - {{  comments.comment }} </p>



                    {% endfor %}
                    {% if user==[] %}
                        <p> Vous devez être connecté pour laisser un message .</p>

                    {% else %}

                    <div class="log-in">
                        <a class="hover-2 btn text-uppercase" href={{ path('comment',{ 'id' : fiche.Gallery.id }) }}>Donnez votre avis</a>
                    </div>
                    {% endif %}

                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <!-- //ab -->
{% endblock %}
